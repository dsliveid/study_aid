{
  "name": "study-aid",
  "version": "1.0.0",
  "description": "桌面学习助手 - Desktop Learning Assistant",
  "main": "out/main/index.js",
  "author": "Study Aid Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "chcp 65001 > nul && electron-vite dev",
    "build": "electron-vite build && node scripts/copy-screenshot-html.js",
    "preview": "electron-vite preview",
    "build:win": "npm run build && electron-builder --win --config electron-builder.config.js",
    "build:win:x64": "npm run build && electron-builder --win --x64 --config electron-builder.config.js",
    "build:win:arm64": "npm run build && electron-builder --win --arm64 --config electron-builder.config.js",
    "build:mac": "npm run build && electron-builder --mac --config electron-builder.config.js",
    "build:linux": "npm run build && electron-builder --linux --config electron-builder.config.js",
    "build:all": "npm run build && electron-builder --win --mac --linux --config electron-builder.config.js",
    "release": "npm run build && electron-builder --win --mac --linux --publish always --config electron-builder.config.js",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "copy:screenshot": "node scripts/copy-screenshot-html.js"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.0",
    "@tiptap/extension-image": "^3.17.1",
    "@tiptap/extension-placeholder": "^3.17.1",
    "@tiptap/extension-text-align": "^3.17.1",
    "@tiptap/starter-kit": "^3.17.1",
    "@tiptap/vue-3": "^3.17.1",
    "axios": "^1.6.0",
    "bufferutil": "^4.1.0",
    "element-plus": "^2.5.0",
    "mammoth": "^1.11.0",
    "pdfjs-dist": "^5.4.530",
    "pinia": "^2.1.0",
    "sql.js": "^1.13.0",
    "utf-8-validate": "^6.0.6",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "electron-updater": "^6.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.0",
    "happy-dom": "^20.3.7",
    "prettier": "^3.1.0",
    "sass": "^1.69.0",
    "scss": "^0.2.4",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.18",
    "vue-tsc": "^1.8.0"
  },
  "build": {
    "appId": "com.studyaid.app",
    "productName": "桌面学习助手",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "language": "2052"
    }
  }
}
